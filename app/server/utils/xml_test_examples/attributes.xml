<file path="">empty path</file>

<!-- Attribute with quotes inside (escaped) -->
<file title="Say &quot;Hello&quot;">greeting</file>

<!-- Multiple same-type elements with different attributes -->
<files>
    <file id="1" type="source">source code</file>
